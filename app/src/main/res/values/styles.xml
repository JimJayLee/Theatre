<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Toolbar style -->
    <style name="Toolbar.BaseStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!-- DetailPopupWindow exit animation -->
    <style name="popup_detail_fade_out">
        <item name="android:windowExitAnimation">@anim/popup_detail_fade_out</item>
    </style>

    <!-- HistoryPopupWindow animation -->
    <style name="popup_history_pop_anim">
        <item name="android:windowEnterAnimation">@anim/popup_history_in</item>
        <item name="android:windowExitAnimation">@anim/popup_history_out</item>
    </style>

</resources>
