<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <import type="com.jiejunlv.theatre.bean.HistoryItem"/>

        <variable
            name="history"
            type="HistoryItem"/>

    </data>

    <!-- Two history items at most -->
    <LinearLayout
        android:background="@drawable/toolbar_shape"
        android:visibility="@{history.searchText1 != null ? View.VISIBLE : View.GONE}"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="10dp"
                android:src="@drawable/ic_action_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/history_icon_popup" />

            <TextView
                android:id="@+id/history_tv1"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_weight="1"
                android:text="@{history.searchText1}"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageView
                android:contentDescription="@string/delete_icon_popup"
                android:id="@+id/history_del1"
                android:padding="10dp"
                android:src="@drawable/ic_action_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:visibility="@{history.searchText2 != null ? View.VISIBLE : View.GONE}"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/history_icon_popup"
                android:padding="10dp"
                android:src="@drawable/ic_action_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/history_tv2"
                android:layout_weight="1"
                android:text="@{history.searchText2}"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageView
                android:contentDescription="@string/delete_icon_popup"
                android:id="@+id/history_del2"
                android:padding="10dp"
                android:src="@drawable/ic_action_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</layout>